@import 'nib'

.likearts-content .partners
	padding 40px 0

	&__carousel
		width 80%
		margin 20px auto
		@media screen and (max-width: $phone)
			width 70%
		@media screen and (max-width: 480px)
			width 60%

	&__title
		font-size 4rem
		text-align center
		margin 30px 0
		@media screen and (max-width: $phone)
			font-size 2rem

	&__btn
		position absolute
		width 60px
		height 60px
		cursor pointer
		top 50%
		transform translateY(-50%)
		user-select none
		&--prev
			left 10px
		&--next
			right 10px
	
	&__icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

	&__pic
		margin 0 auto

	.slick-prev
		left -55px
		width auto
		height auto
		&:before
			content ''	
			display block
			width 54px
			height 54px
			background-image url(../resources/icons/circle-left.png)

	.slick-next
		right -55px
		width auto
		height auto
		&:before
			content ''
			display block
			width 54px
			height 54px
			background-image url(../resources/icons/circle-right.png)
		


