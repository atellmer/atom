@import 'nib'

.likearts-content .modals
	position relative

	&__overlay
		display none
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background-color #000
		opacity 0.8
		z-index 100
		cursor pointer

.likearts-content .atm-modal
	display none
	position fixed
	top 25%
	left 50%
	transform translate(-50%, 0%)
	width 50%
	height auto
	background-color #fff
	z-index 101
	@media screen and (max-width: $phone)
		width 80%

	&__close
		position absolute
		top -16px
		right -16px
		cursor pointer
		user-select none

	&__icon
		color #fff
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

	&__body
		width 100%
		height auto
		min-height 380px
		padding 40px
		@extend .flex
		@media screen and (max-width: $phone)
			padding 20px

	&__content
		width 100%
		height auto

	&__title
		font-size 2.5rem
		color $primary-color-text
		margin 20px 0
		text-align center
		@media screen and (max-width: $phone)
			font-size 1.5rem

	&__form
		width 100%
		@extend .flex
		flex-flow column wrap

	&__input-group
		width 50%
		margin 5px 0
		@media screen and (max-width: $phone)
			width 100%

	&__input
		border-radius 5px!important
		border 1px solid $secondary-color
		color $primary-color-text

	&__btn
		margin 30px 0

::-webkit-input-placeholder
	color $primary-color-text!important

::-moz-placeholder
	color $primary-color-text!important

:-moz-placeholder
	color $primary-color-text!important

:-ms-input-placeholder
	color $primary-color-text!important


.likearts-content .modals .js-is-open
	display inherit