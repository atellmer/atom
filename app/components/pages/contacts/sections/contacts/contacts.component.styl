
@import 'nib'

.likearts-content .contacts
	padding 35px 0

	&__title
		font-size 4rem
		margin 15px 0
		line-height 1
		@media screen and (max-width: $phone)
			font-size 2.5rem

	&__map
		@media screen and (max-width: $phone)
			padding 0 20px

	&__divider
		margin 20px 0 0 0

	&__items
		@media screen and (max-width: $phone)
			margin 20px 0 0 0

	&__item
		margin 0 0 15px 0

	&__item-line
		margin 5px 0
		font-size 1.6rem
		@extend .flex
		flex-flow row wrap
		justify-content flex-start
		@media screen and (max-width: $phone)
			font-size 1.4rem
		&--margin
			margin 0
		&--address
			&:before
				content ''
				display inline-block
				width 14px
				height 23px
				@extend .cover
				background-image url(../resources/icons/map.png) 
				margin 0 10px 0 0
				@media screen and (max-width: 480px)
					display none
		&--email
			&:before
				content ''
				display inline-block
				width 21px
				height 15px
				@extend .cover
				background-image url(../resources/icons/mail.png) 
				margin 0 10px 0 0
				@media screen and (max-width: 480px)
					display none
		&--phone
			&:before
				content ''
				display inline-block
				width 20px
				height 20px
				@extend .cover
				background-image url(../resources/icons/phone.png) 
				margin 0 10px 0 0
				@media screen and (max-width: 480px)
					display none
		&--site
			&:before
				content ''
				display inline-block
				width 32px
				height 6px
				@extend .cover
				background-image url(../resources/icons/site.png) 
				margin 0 10px 0 0
				@media screen and (max-width: 480px)
					display none

	&__item-title
		font-size 3rem
		@media screen and (max-width: $phone)
			font-size 2rem

	&__item-name
		font-weight 700
		margin 0 10px 0 0



